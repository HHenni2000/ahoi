rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Events collection - read-only for all, write only for admin/functions
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;  // Only Cloud Functions can write
    }

    // Sources collection - read-only for all, write only for admin/functions
    match /sources/{sourceId} {
      allow read: if true;
      allow write: if false;  // Only Cloud Functions can write
    }

    // Future: Add authentication rules when user accounts are implemented
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
