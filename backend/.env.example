# ahoi Backend - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for LLM extraction)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Gemini API Key (required for /api/discovery/gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (optional, defaults to gemini-3-flash-preview)
GEMINI_MODEL=gemini-3-flash-preview

# Gemini request timeout/retries for grounded search (optional)
GEMINI_TIMEOUT_SECONDS=90
GEMINI_RETRY_COUNT=1

# Database path (optional, defaults to ./data/ahoi.db)
DATABASE_PATH=./data/ahoi.db

# Debug mode (optional, set to 1 for verbose logging)
DEBUG=0

# Logging (optional)
LOG_LEVEL=INFO
SCRAPER_DEBUG=0

# Geocoding (optional, uses OpenStreetMap Nominatim)
GEOCODING_ENABLED=true
GEOCODING_USER_AGENT=ahoi-app/1.0
GEOCODING_MIN_DELAY_SECONDS=1.1

# Scraper iframe handling (optional)
MAX_IFRAMES=3

# Nearby reference (used by "In eurer Naehe")
NEARBY_REF_POSTAL=22609
# Optional explicit coordinates (skip geocoding if both are set)
# NEARBY_REF_LAT=53.56
# NEARBY_REF_LNG=9.87

# Default max allowed minimum-age label for events/ideas in API results.
# Example: with 8, entries like "ab 10" or "ab 16" are hidden by default.
EVENT_MAX_ALLOWED_AGE=8
